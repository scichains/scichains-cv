{
  "app": "executor",
  "version": "0.0.1",
  "category": "matrices.drawing",
  "name": "Draw (infinite) straight(s)",
  "tags": [
    "matrices"
  ],
  "id": "f97d9d69-3559-4ddc-ad67-ac8a413c5376",
  "language": "java",
  "java": {
    "class": "net.algart.executors.modules.cv.matrices.drawing.DrawStraight"
  },
  "in_ports": [
    {
      "value_type": "mat",
      "name": "input"
    },
    {
      "value_type": "numbers",
      "name": "positions",
      "hint": "Contains blocks of 2 numbers x,y"
    },
    {
      "value_type": "numbers",
      "name": "colors"
    }
  ],
  "out_ports": [
    {
      "value_type": "mat",
      "name": "output"
    }
  ],
  "controls": [
    {
      "name": "percents",
      "value_type": "boolean",
      "edition_type": "value",
      "default": false
    },
    {
      "name": "x",
      "value_type": "double",
      "edition_type": "value",
      "default": 0
    },
    {
      "name": "y",
      "value_type": "double",
      "edition_type": "value",
      "default": 0
    },
    {
      "name": "angleInDegree",
      "value_type": "double",
      "edition_type": "value",
      "default": 0
    },
    {
      "name": "thickness",
      "caption": "Line thickness",
      "value_type": "double",
      "edition_type": "value",
      "default": 1
    },
    {
      "name": "antialiasing",
      "caption": "Antialiasing",
      "value_type": "boolean",
      "edition_type": "value",
      "default": false
    },
    {
      "name": "color",
      "caption": "Color",
      "description": "Supported color formats are the same as in standard \"java.awt.Color.decode\" method. Alpha-channel is not supported.",
      "value_type": "String",
      "edition_type": "color",
      "default": "#FFFFFF"
    },
    {
      "caption": "Convert to color",
      "description": "Convert monochrome (1-channel) input image to 3-channel color image, with automatic of conversion binary matrix (1 bit) to byte (8 bits); does not matter when the input image has more than 1 channel",
      "name": "convertMonoToColor",
      "value_type": "boolean",
      "edition_type": "value",
      "default": true
    },
    {
      "caption": "Clear source",
      "name": "clearSource",
      "value_type": "boolean",
      "edition_type": "value",
      "default": false
    }
  ]
}